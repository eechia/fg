<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/alert_dark_frame" 
        android:layout_margin="5dip"
        />

    <TextView
        android:id="@+id/postText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePost"
        android:layout_toRightOf="@+id/imagePost" />

    <TextView
        android:id="@+id/timePostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imagePost"
        
        android:text="Timestamp"
        
        android:textSize="12dip"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        />


    <TextView
        android:id="@+id/authorPostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_toRightOf="@+id/timePostTxt"
        
       
        android:layout_below="@+id/imagePost"
        android:text="Posted by"
       android:paddingLeft="5dip"
       android:paddingBottom="5dip"
        android:textSize="12dip"
         />
    
    
    <TextView
        android:id="@+id/commentPostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       
        android:text="0 comments"
        
		android:textSize="12dip"       
         android:layout_below="@+id/imagePost"
         android:paddingBottom="5dip"
         android:paddingRight="5dip"
          />

</RelativeLayout>