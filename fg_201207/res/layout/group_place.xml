<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/app_background">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerbackground"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/orangebutton"
            android:text="Join" 
            android:textColor="@color/header"
            android:layout_marginRight ="5dip"/>

        
       <TextView
        android:id="@+id/textPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        
        android:text="Place"
        android:textSize="18dip"
        android:textStyle="bold" 
        android:textColor ="@color/header"
        
        android:layout_centerInParent="true"
        />
        
        
        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/orangebutton"
            android:text="Back" 
            android:layout_marginLeft ="5dip"
            android:textColor="@color/header"
          />
        
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgGroup"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_below="@+id/topbar"
        android:src="@drawable/default_userpic" 
        android:paddingTop="5dip"
        android:paddingRight="5dip"
        android:paddingLeft="5dip"
        android:paddingBottom="5dip"
        />

    <TextView
        android:id="@+id/textGrpDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgGroup"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:text="group description"
        android:textSize="15dip"
        android:lines="10"
        
         />

   

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_toRightOf="@+id/imgGroup"
        android:orientation="vertical" 
        
        
        >

        <TextView
            android:id="@+id/textGrpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imgGroup"
            android:layout_alignTop="@+id/imgGroup"
            android:text="Group Name" 
             android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
          
            android:textSize="20dip" 
            android:textStyle="bold"
            android:textColor="@color/post_listing"
            />

        <TextView
            android:id="@+id/textWeCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imgGroup"
            android:layout_below="@+id/textGrpName"
            android:text="by wecare.my"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingTop="0dip"
            android:textSize="15dip" 
            
            
             />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/postCountLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGrpDesc"
        android:background="#E8E6E7"
        android:layout_alignParentBottom="true"
        >
    
        
    
    <RelativeLayout
        android:id="@+id/postCountLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/textGrpDesc"
        android:layout_toLeftOf="@+id/button_helper"
        android:layout_margin="10dp"
        
        >
    
          <TextView
        android:id="@+id/txtPostCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:text="Posts"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/PostIcon" />
         

         <ImageView
             android:id="@+id/PostIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:src="@drawable/map_button" 
             android:padding="5dip"
             
             />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/memberCountLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/textGrpDesc"
        android:layout_toRightOf="@+id/button_helper"
        android:paddingLeft="10dip"  
         android:layout_margin="10dp"      
        >

        
        <TextView
        android:id="@+id/txtMemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 		android:layout_toRightOf="@+id/smileyIcon"       
        android:layout_centerVertical="true"
        android:text="Members"
        android:textColor="#000000" />

        <ImageView
            android:id="@+id/smileyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            
            android:src="@drawable/smiley_happy"
            android:padding="3dip"
             />
    	
        </RelativeLayout>
        
    
        
    <RelativeLayout
        android:id="@+id/shareLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:layout_below="@+id/postCountLayout"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        
         
          
        
        >

        <TextView
            android:id="@+id/shareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			          
            android:text="Share on" 
            android:textSize="12dip"
           
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_centerVertical="true"
            
            />
        
        <ImageButton
            android:id="@+id/fbBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding ="5dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shareText"
            android:src="@drawable/icon_fb" 
            android:background="@null"
            
            
            />

        

        <ImageButton
            android:id="@+id/twitterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fbBtn"
            android:src="@drawable/icon_tw"
            android:background="@null" 
            android:padding ="5dip"
            />
        
        <ImageButton
            android:id="@+id/gPlusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/twitterBtn"
            android:src="@drawable/icon_gg" 
            android:background="@null"
            android:padding ="5dip"
            />
        
        
        <ImageButton
            android:id="@+id/emailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/gPlusBtn"
            android:src="@drawable/icon_em" 
            android:background="@null"
            android:padding ="5dip"
            />

    </RelativeLayout>
    
    <TextView
	 android:id="@+id/button_helper"
	 android:layout_width="0dp"
	 android:layout_height="wrap_content"
	 android:layout_centerHorizontal="true" 
	 />
    
    
    
    
</RelativeLayout>
    
</RelativeLayout>